<Main>:
    MDBoxLayout:
        orientation: 'vertical'

        MDBoxLayout:
            MDFloatLayout:
                MDRoundFlatIconButton:
                    id: load_button
                    pos_hint: {'center_x': 0.5, 'top':0.8}
                    size_hint_y: 0.15
                    size_hint_x: 0.2
                    height: 30
                    text: 'Load excel file'
                    icon: 'folder'
                    on_release: root.show_load()


<LoadDialog>
    MDBoxLayout:
        orientation: 'vertical'
        pos: root.pos
        size: root.size
        FileChooserIconView:
            id: loadfile
            on_selection: root.load(loadfile.path, loadfile.selection), root.cancel(), root.open_result()


        MDBoxLayout:
            size_hint_y: 0.08
            MDFloatLayout:
                MDRectangleFlatButton:
                    pos_hint:{'center_x':0.5, 'center_y':0.5}
                    text: "Cancel"
                    on_release: root.cancel()

<ResultDialog>
    MDBoxLayout:
        id: grafico
        orientation: 'vertical'
        pos_hint: {'center_x':0.5, 'center_y':0.55}
        size_hint_x: 0.9
        size_hint_y: 0.9

    MDBoxLayout:
        size_hint_y: 0.08
        pos: root.pos
        MDFloatLayout:
            MDRectangleFlatButton:
                pos_hint:{'center_x':0.5, 'center_y':0.2}
                text: "Voltar"
                on_release: root.cancel2()
